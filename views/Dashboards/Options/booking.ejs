//     const roomType = document.getElementById('roomType').value;
  
//     alert(`Thank you for booking, ${name}! You have booked a ${roomType} room in ${city}. We will contact you via ${email}.`);
//   });
  
  // Set the min attribute for date input to only allow upcoming dates
  const today = new Date().toISOString().split('T')[0];
  document.getElementById("b_date").setAttribute("min", today);
  </script>
</body>
</html>
